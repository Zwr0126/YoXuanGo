/* pages/feedback/index.wxss */
page {
  background-color: #eeeeee;
}
.fd_main {
  padding: 20rpx;
  color: #666;
}
.fd_main fd_title {
  font-size: 32rpx;
}
.fd_main .fd_tips {
  display: flex;
  flex-wrap: wrap;
}
.fd_main .fd_tips text {
  width: 30%;
  padding: 10rpx 0;
  background-color: #fff;
  margin: 20rpx 10rpx;
  text-align: center;
  border-radius: 10rpx;
}
.fd_main .fd_content {
  background-color: #fff;
  margin-top: 20rpx;
  border-radius: 10rpx;
}
.fd_main .fd_content textarea {
  padding: 10rpx;
}.fd_main .fd_content .fd_tool {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 30rpx;
}
.fd_main .fd_content .fd_tool button {
  margin: 0;
  width: 100rpx;
  height: 100rpx;
  font-size: 60rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 30rpx;
  margin-top: 30rpx;
  border: 1rpx solid #ededed;
  color: #ccc;
}
.fd_main .fd_content .fd_tool .up_img_item {
  margin-left: 30rpx;
  margin-top: 30rpx;
}
.fd_main .form_btn_wrap {
  margin-top: 20rpx;
}
.fd_main .form_btn_wrap button {
  width: 30%;
  margin: 0;
  background-color: #e64340;
  color: #fff;
  font-size: 32rpx;
  padding: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 70%;
}
.fd_main .form_btn_wrap button icon {
  margin-right: 10rpx;
}