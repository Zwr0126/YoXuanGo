/* pages/search/index.wxss */
page {
  background-color: #dedede;
  padding: 20rpx;
}
.search_row {
  display: flex;
  height: 60rpx;
}
.search_row input {
  flex: 1;
  height: 100%;
  background-color: #fff;
  padding-left: 30rpx;
  border-radius: 8rpx;
}
.search_row .btn {
  width: 110rpx;
  height: 100%;
  font-size: 26rpx;
  font-weight: 400;
  padding: 0;
  margin: 0 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search_content {
  margin-top: 30rpx;
}
.search_content .search_item {
  background-color: #fff;
  font-size: 26rpx;
  padding: 15rpx 10px;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}