/**app.wxss**/

@import "./styles/iconfont.wxss";

/* 初始化页面 通过标签初始化 */
page, view, text, block, swiper, swiper-item, image, navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 
主题颜色 通过变量来实现
1 less 中存在变量这个知识
2 原生css和wxss也支持变量
 */
 page {
   /* 定义主题颜色 */
   --themeColor: #eb4450;
   /* 
   定义统一的字体大小 假设设计稿 大小是 375px
   1px = 2rpx 14px = 28rpx
   */
   font-size: 28rpx;
 }

 image {
   width: 100%;
 }
 
 ._no {
  font-size: 30rpx;
  color: #666;
  text-align: center;
  padding-top: 60rpx;
 }